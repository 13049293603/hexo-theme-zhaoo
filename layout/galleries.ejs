<main id="main">
  <section class="galleries container">
    <div class="galleries-head">
      <h1>摄影</h1>
      <p>Photography</p>
    </div>
    <% if (site.data && site.data.galleries) { %>
    <% var galleries = site.data.galleries; %>
    <div id="galleries">
      <% for (var i = 0, len = galleries.length; i < len; i++) { %>
      <% var gallery = galleries[i]; %>
      <a href="./<%- gallery.name %>">
        <img src="<%- gallery.cover %>" alt="<%- gallery.name %>" class="lazyload">
      </a>
      <% } %>
    </div>
    <% } %>
  </section>
</main>