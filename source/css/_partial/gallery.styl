.galleries
  .galleries-title
    font-size 1.5rem
    font-weight bold
    text-align center
    margin-bottom 30px
  .galleries-item
    margin-bottom 30px
    .image-box
      position relative
      background-color black
      a
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        img
          width 100%
          height 100%
          object-fit cover
          opacity 0.8
          transition $transition
      .galleries-intro
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        color $color-white
        z-index 10
        h3
          text-align center
          font-weight bold
          font-size 1.5rem
        p
          font-size 1rem
          display none
    .image-box:hover
      .galleries-intro
        p
          display inline-block
      img
        opacity 0.5
        transition $transition
    .image-box::before
      content ''
      display block
      padding-top 100%