.search
  position fixed
  display none
  width 100vw
  height 100vh
  top 0
  left 0
  background-color rgba(255, 255, 255, 0.7)
  -webkit-backdrop-filter saturate(180%) blur(10px)
  backdrop-filter saturate(180%) blur(10px)
  z-index 300
  .search-container
    width 100%
    height 100%
    display flex
    flex-direction column
    align-items center
    .search-close
      position absolute
      right 15px
      top 15px
      cursor pointer
      i
        color var(--color-text)
        font-size 24px
    